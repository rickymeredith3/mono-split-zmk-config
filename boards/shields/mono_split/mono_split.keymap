#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        colemak_dh {
            display-name = "Defualt";
            // -----------------------------------------------------------------------------------------------
            // |   Q   |   W   |   F   |   P   |   B   |             |   J   |   L   |   U   |   Y   |   ;   |
            // | A/ALT | R/CTRL| S/CMD |T/SHIFT|   G   |             |   M   |   N   |   E   |   I   |   O   |
            // |   X   |   C   |   D   |   V   |   Z   |             |   K   |   H   |   ,   |   .   |   /   |
            //                         |   F   |  TAB  |  ESC | BSPC | SPACE |   F   |
            bindings = <
                &kp Q       &kp W       &kp F       &kp P        &kp B                           &kp J      &kp L       &kp U       &kp Y       &kp SEMICOLON   
                &hm LALT A  &hm LCTRL R &hm LGUI S  &hm LSHIFT T &kp G                           &kp M      &hm RSHIFT N  &hm RGUI E &hm RCTRL I  &hm RALT O
                &kp X       &kp C       &kp D       &kp V        &kp Z      &kp C_PLAY_PAUSE     &kp K      &kp H       &kp COMMA   &kp DOT     &kp SLASH
                                                    &mo 1        &kp TAB  &hm CAPS ESC &kp BSPC  &hm ENTER SPACE &mo 2
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
        };

        num_sym {
            display-name = "Num Sym";
            // -----------------------------------------------------------------------------------------------
            // |   Q   |   W   |   F   |   P   |   B   |             |   J   |   L   |   U   |   Y   |   ;   |
            // | ~/ALT | R/CTRL| S/CMD |T/SHIFT|   G   |             |   M   |   N   |   E   |   I   |   O   |
            // |   X   |   C   |   D   |   V   |   Z   |             |   K   |   H   |   ,   |   .   |   /   |
            //                         |   L1  |  TAB  |  ESC | BSPC | SPACE |   L2  |
            bindings = <
                &kp Q       &kp W       &kp F       &kp P        &kp B                           &kp LBRC   &kp RBRC       &kp N7       &kp N8       &kp N9       
                &hm LALT GRAVE  &hm BSLSH R &hm LGUI EQUAL  &hm LSHIFT MINUS &kp NONE                           &kp LBKT   &hm RALT RBKT  &hm RCTRL N4 &hm RGUI N5  &hm RSHIFT N6
                &kp X       &kp C       &kp D       &kp V        &kp Z      &kp C_PLAY_PAUSE     &kp SQT     &kp N0         &kp N1       &kp N2       &kp N3
                                                    &tog 1        &kp TAB  &hm CAPS ESC &kp BSPC  &hm ENTER SPACE &kp N0
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
        };

        function {
            display-name = "Func";
            // -----------------------------------------------------------------------------------------------
            // |   Q   |   W   |   F   |   P   |   B   |             |   J   |   L   |   U   |   Y   |   ;   |
            // | A/ALT | R/CTRL| S/CMD |T/SHIFT|   G   |             |   M   |   N   |   E   |   I   |   O   |
            // |   X   |   C   |   D   |   V   |   Z   |             |   K   |   H   |   ,   |   .   |   /   |
            //                         |   F   |  TAB  |  ESC | BSPC | SPACE |   F   |
            bindings = <
                &bt BT_CLR  &kp W  &bt BT_SEL 2 &bt BT_SEL 1 &bt BT_SEL 0                          &kp F1   &kp F2       &kp F3       &kp F5       &kp F12       
                &hm LALT A  &hm LCTRL R &hm LGUI S  &hm LSHIFT T &kp G                           &kp LEFT   &hm RIGHT  &hm UP &hm DOWN  &hm NONE
                &kp X       &kp C       &kp D       &kp V        &kp Z      &kp C_PLAY_PAUSE     &kp C_VOL_DOWN     &kp C_VOL_UP         &kp C_PREV       &kp C_PLAY_PAUSE     &kp C_NEXT
                                                    &tog 2        &kp TAB  &hm CAPS ESC &kp BSPC  &hm ENTER SPACE &kp X
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
        };
    };
 };